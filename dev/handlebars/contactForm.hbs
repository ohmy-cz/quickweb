<form action="" method="post" enctype="application/x-www-form-urlencoded" class="avi-contentContainer form-horizontal">
  <div class="form-group">
    <label class="col-md-5 col-lg-2 control-label">
      Name<span class="required">*</span>
    </label>
    <div class="col-md-7 col-lg-10">
      <input type="text" name="name" class="form-control" required>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-5 col-lg-2 control-label">
      E-mail<span class="required">*</span>
    </label>
    <div class="col-md-7 col-lg-10">
      <input type="email" name="email" class="form-control" required>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-5 col-lg-2 control-label">
      Telephone
    </label>
    <div class="col-md-7 col-lg-10">
      <input type="text" name="telephone" class="form-control" required>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-5 col-lg-2 control-label">
      Comments<span class="required">*</span>
    </label>
    <div class="col-md-7 col-lg-10">
      <textarea name="comments" class="form-control" rows="5" required></textarea>
    </div>
  </div>
</form>